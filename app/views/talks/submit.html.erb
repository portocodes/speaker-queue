<div class="container">
 <h1>SUBMIT A NEW TALK & LOGIN PAGE</h1>

  <div class="col-lg-6">
    <%= form_for :talk, :html => { :class => "form-horizontal talk" } do |f| %>

      <%= f.fields_for :user, do |user_form| %>
        <%= devise_error_messages! %>

          <div class="field">
            <%= user_form.label :name %><br />
            <%= user_form.text_field :name, autofocus: true %>
          </div>

          <div class="field">
            <%= user_form.label :email %><br />
            <%= user_form.email_field :email %>
          </div>

          <div class="field">
            <%= user_form.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= user_form.password_field :password, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= user_form.label :password_confirmation %><br />
            <%= user_form.password_field :password_confirmation, autocomplete: "off" %>
          </div>

     <% end %>


        <div class="form-group">
          <%= f.label :title, :class => 'control-label ' %>
          <%= f.text_field :title, :class => 'form-control' %>
          <%=f.error_span(:title) %>
        </div>
        <div class="form-group">
          <%= f.label :description, :class => 'control-label ' %>
          <%= f.text_area :description, cols: "30", rows: "10", :class => 'form-control' %>
          <%=f.error_span(:description) %>
        </div>

        <div class="form-group">
          <%= f.label :duration, :class => 'control-label ' %>
          <%= f.number_field :duration, :class => 'form-control', :size => "10", max: 30 %>
          <%=f.error_span(:duration) %>
        </div>
        <div class="form-group">
          <%= f.label :speaker, :class => 'control-label ' %>
          <%= f.text_field :speaker, :class => 'form-control' %>
          <%=f.error_span(:speaker) %>
        </div>



    <div class="form-group">
      <%= f.submit "Sign Up & Submit Your First Talk", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), talks_path, :class => 'btn btn-default' %>
    </div>

  </div>
<% end %>
