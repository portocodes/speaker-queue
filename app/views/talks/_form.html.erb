<%= form_for @talk, :html => { class: "form-horizontal talk" } do |f| %>
  <% if @talk.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@talk.errors.count, "error") %>
          prohibited this talk from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @talk.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-lg-6">
    <div class="field">
      <%= f.label :title, class: 'control-label' %>
      <%= f.text_field :title, class: 'form-control', required: true %>
    </div>

    <div class="field">
      <%= f.label :description, class: 'control-label' %>
      <%= f.text_area :description, cols: "30", rows: "10", class: 'form-control', required: true %>
    </div>

    <div class="field">
      <div>
        <%= f.radio_button :kind, 'lightning', required: true %>
        <%= f.label :kind_lightning %>
      </div>

      <div>
        <%= f.radio_button :kind, 'full', required: true %>
        <%= f.label :kind_full %>
      </div>

      <div>
        <%= f.radio_button :kind, 'workshop', required: true %>
        <%= f.label :kind_workshop %>
      </div>
    </div>

    <div class="field">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), talks_path, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
