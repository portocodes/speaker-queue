<%- model_class = Talk %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
          <th><%= model_class.human_attribute_name(:title) %></th>
          <th><%= model_class.human_attribute_name(:description) %></th>
          <th><%= model_class.human_attribute_name(:tag_list) %></th>
          <th><%= model_class.human_attribute_name(:duration) %></th>
          <th><%= model_class.human_attribute_name(:speaker) %></th>
          <th><%= model_class.human_attribute_name(:status) %></th>
          <% if user_signed_in? %>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
          <% end %>
        </tr>
       </thead>
       <tbody>
        <% @talks.each do |talk| %>
          <tr>
            <td><%= talk.title %></td>
            <td><%= talk.description %></td>
            <td><span class="tag-color"><%= raw talk.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></span></td>
            <td><%= talk.duration %></td>
            <td><%= talk.speaker %></td>
            <td><span class="btn status <%= talk.state %>"><%= talk.state %></span></td>
            <% if user_signed_in? %>
            <td>
              <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe,
                          edit_talk_path(talk), :class => 'btn btn-default btn-md',
                          :title => 'Edit', :rel => 'tooltip', "data-placement" => "left" %>
              <%= link_to '<i class="fa fa-ban"></i>'.html_safe,
                          talk_path(talk),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-md btn-danger',
                          :title => 'Delete', :rel => 'tooltip', "data-placement" => "right" %>
              <%= link_to '<i class="fa fa-check fa-lg"></i>'.html_safe, approve_talk_path(talk), method: :put,
                          :class => 'btn btn-md btn-default',
                          :title => 'Approve', :rel => 'tooltip', "data-placement" => "right" %>
              <%= link_to '<i class="fa fa-times-circle fa-lg"></i>'.html_safe, reject_talk_path(talk), method: :put,
                          :class => 'btn btn-md btn-default',
                          :title => 'Reject', :rel => 'tooltip', "data-placement" => "right" %>
              <%= link_to '<i class="fa fa-clock-o fa-lg"></i>'.html_safe, delay_talk_path(talk), method: :put,
                          :class => 'btn btn-md btn-default',
                          :title => 'Delay', :rel => 'tooltip', "data-placement" => "right" %>
            </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
      <% if user_signed_in? %>
        <%= link_to t('.new', :default => t("helpers.links.new")),
                    new_talk_path,
                    :class => 'btn btn-primary' %>
        <% else %>
        <%= link_to t('.submit', :default => t("helpers.links.submit a new talk")),
                    submit_path,
                    :class => 'btn btn-primary' %>
      <% end %>
      <div id="tag_cloud">
        <% tag_cloud Talk.tag_counts, %w[s m l] do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
      </div>
    </div>
  </div>
</div>
